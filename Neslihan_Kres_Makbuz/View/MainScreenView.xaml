<Window x:Class="Neslihan_Kres_Makbuz.View.MainScreenView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Neslihan_Kres_Makbuz.View" xmlns:viewmodel="clr-namespace:Neslihan_Kres_Makbuz.ViewModel" xmlns:svg="clr-namespace:Neslihan_Kres_Makbuz.Resources.SVG" xmlns:usercontrols="clr-namespace:Neslihan_Kres_Makbuz.View.UserControls"
        mc:Ignorable="d" 
        
        Height="720" Width="1080" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        Background="{DynamicResource Background}" 
        WindowState="{Binding MainWindowState, Mode=TwoWay}"        >
    <Window.DataContext>
        <Binding Path="MainScreen" Source="{StaticResource Locator}"/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--#region Content -->
        <TabControl Grid.Row="1" Grid.Column="1" >
            <TabItem Visibility="Collapsed">
                <Frame x:Name="StudentFrame" Source="StudentScreenView.xaml" />
            </TabItem>
        </TabControl>
        <!--#endregion-->
        
        <!--#region LEFT MENU -->
        <usercontrols:NavigationBarView Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" MouseDown="Window_MouseDown" />
        <!--#endregion-->

        <!--#region TOP MENU -->
        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="{DynamicResource Background}" MouseDown="Window_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>

            <Button Grid.Column="3" Content="X" Style="{DynamicResource WindowsCloseButton}" Command="{Binding CloseApplicationCommand}" />
            <Button Grid.Column="2" Content="□" Style="{DynamicResource WindowsButton}" Command="{Binding MaximizeApplicationCommand}" Margin="0 -5 0 0" />
            <Button Grid.Column="1" Content="-" Style="{DynamicResource WindowsButton}" Command="{Binding MinimizeApplicationCommand}" />
        </Grid>
        <!--#endregion-->

    </Grid>
</Window>
